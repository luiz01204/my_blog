<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>

<div class="container">
    <h2 class="mt-3">Usuários</h2>

    <a href="/admin/users/create"><button class="btn btn-primary mt-3">Adicionar</button></a>
    
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usuário</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(users =>{ %>
                <tr>
                    <td><%= users.id %></td>
                    <td><%= users.email %></td>
                    <td>
                        <div class="d-flex justify-content-end">

                            <form action="/admin/users/delete" method="POST" onsubmit="confirmDelete(event, this)">
                                <input type="hidden" name="id" value="<%= users.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </div>
                    </td>
                </tr>
           <% }) %>
        </tbody>
    </table>
</div>

<%- include("../../partials/footer.ejs") %>

<script>
    function confirmDelete(event, form){
        event.preventDefault();
        var decision = confirm("Você deseja deletar esse usuário?");
        if(decision){
            form.submit();
        }
    }
</script>